<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:backgroundTint="@color/azulverde"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fecha_servicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Fecha"
            android:paddingLeft="3dp"
            android:textColor="@color/azul1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numero_servicio" />

        <TextView
            android:id="@+id/numero_servicio"
            android:layout_width="67dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:hint="# Servicio"
            android:paddingLeft="3dp"
            android:textColor="@color/rojocamillero"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.024"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imagenOrden"
            android:layout_width="90dp"
            android:layout_height="76dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/hora_servicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Hora"
            android:paddingLeft="3dp"
            android:textColor="@color/azul1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fecha_servicio" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="49dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hora_servicio"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_article_24"
            app:tint="@color/azul1" />

        <TextView
            android:id="@+id/nombre_paciente"
            android:layout_width="116dp"
            android:layout_height="22dp"
            android:layout_marginEnd="9dp"
            android:hint="Paciente"
            android:paddingLeft="3dp"
            android:textColor="@color/azul2"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imagenOrden"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/numero_servicio"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/historia_clinica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="9dp"
            android:hint="historia_clinica"
            android:paddingLeft="3dp"
            android:textColor="@color/azul1"
            app:layout_constraintEnd_toStartOf="@+id/imagenOrden"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/fecha_servicio"
            app:layout_constraintTop_toBottomOf="@+id/nombre_paciente" />

        <TextView
            android:id="@+id/camillero_asignado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="44dp"
            android:hint="camillero"
            android:paddingLeft="3dp"
            app:layout_constraintEnd_toStartOf="@+id/imagenOrden"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/hora_servicio"
            app:layout_constraintTop_toBottomOf="@+id/historia_clinica" />

        <TextView
            android:id="@+id/estado_servicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="4dp"
            android:hint="ENCURSO"
            android:paddingLeft="3dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/camillero_asignado" />

        <TextView
            android:id="@+id/camilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:hint="camilla"
            android:paddingLeft="3dp"
            android:textColor="@color/azul1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.657"
            app:layout_constraintStart_toEndOf="@+id/estado_servicio"
            app:layout_constraintTop_toBottomOf="@+id/imagenOrden" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>